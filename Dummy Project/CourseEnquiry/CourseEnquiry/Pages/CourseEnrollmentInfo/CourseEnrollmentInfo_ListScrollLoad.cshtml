@page
@model CourseEnquiry.Pages.CourseEnrollmentInfo_ListScrollLoadModel
@{
    ViewData["Title"] = "List of Course Enrollment Info";
}

@section AdditionalCss {
    <link rel="stylesheet" href="~/css/ui.jqgrid.min.css" />
}

@section AdditionalJavaScript {
    <script src="~/js/jqgrid-i18n/grid.locale-en.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery-jqgrid-4.13.2.min.js" asp-append-version="true"></script>

    <script type="text/javascript">
        function enrollmentIdLink(cellvalue, options, rowObject) {
            return "<a href='/CourseEnrollmentInfo/CourseEnrollmentInfo_Details?id=" + cellvalue + "&returnUrl=/CourseEnrollmentInfo/CourseEnrollmentInfo_ListScrollLoad'>" + cellvalue + "</a>";
        }

        function courseIdLink(cellvalue, options, rowObject) {
            return "<a href='/Course/Course_Details?id=" + cellvalue + "&returnUrl=/CourseEnrollmentInfo/CourseEnrollmentInfo_ListScrollLoad'>" + cellvalue + "</a>";
        }

        function studentIdLink(cellvalue, options, rowObject) {
            return "<a href='/Student/Student_Details?id=" + cellvalue + "&returnUrl=/CourseEnrollmentInfo/CourseEnrollmentInfo_ListScrollLoad'>" + cellvalue + "</a>";
        }

        $(function () {
            $('#list-grid').jqGrid({
                url: '/CourseEnrollmentInfo/CourseEnrollmentInfo_ListScrollLoad?handler=GridData',
                datatype: 'json',
                mtype: 'GET',
                colNames: ['Enrollment Id','Course Id','Student Id','Comments'],
                colModel: [
                    { name: 'EnrollmentId', index: 'EnrollmentId', align: 'right', formatter: enrollmentIdLink },
                    { name: 'CourseId', index: 'CourseId', align: 'right', formatter: courseIdLink },
                    { name: 'StudentId', index: 'StudentId', align: 'right', formatter: studentIdLink },
                    { name: 'Comments', index: 'Comments', align: 'left' }
                ],
                pager: $('#list-pager'),
                pageable: true,
                autoencode: true,
                jsonReader:
                {
                    page: "d.page"
                },
                scroll: 1,
                gridview: true,
                rownumbers: true,
                rownumWidth: 20,
                rowNum: 20,
                sortname: 'EnrollmentId',
                sortorder: "asc",
                viewrecords: true,
                caption: 'List of Course Enrollment Info',
                height: '250',
                width: '1200'
            });
        });

        // rename the page parameter to _page because asp.net core razor's page model
        // does not recognize the page parameter when passed
        $.extend(jQuery.jgrid.defaults, {
            prmNames: {
                page: "_page"
            }
        });
    </script> 
}

<h2>@ViewData["Title"]</h2>
<br /><br />
<table id="list-grid"></table>
<div id="list-pager"></div>
