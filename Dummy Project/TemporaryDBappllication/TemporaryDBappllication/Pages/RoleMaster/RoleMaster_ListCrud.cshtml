                </tr>
                <tr>
                    <td class="editor-label"><label asp-for="RoleMaster.CreatedOn"></label>:</td>
                    <td><span style="color: red;">*</span></td>
                    <td class="editor-field"><input asp-for="RoleMaster.CreatedOn" class="datetextbox" id="createdOn" type="text" onblur="isDataValid()" /></td>
                    <td class="editor-field"><span id="createdOnValidation" style="color: red;"></span></td>
                </tr>
                <tr>
                    <td class="editor-label"><label asp-for="RoleMaster.CreatedBy"></label>:</td>
                    <td><span style="color: red;">*</span></td>
                    <td class="editor-field"><input asp-for="RoleMaster.CreatedBy" id="createdBy" onblur="isDataValid()" /></td>
                    <td class="editor-field"><span id="createdByValidation" style="color: red;"></span></td>
                </tr>
                <tr>
                    <td class="editor-label"><label asp-for="RoleMaster.ModifiedOn"></label>:</td>
                    <td></td>
                    <td class="editor-field"><input asp-for="RoleMaster.ModifiedOn" class="datetextbox" id="modifiedOn" type="text" onblur="isDataValid()" /></td>
                    <td class="editor-field"><span id="modifiedOnValidation" style="color: red;"></span></td>
                </tr>
                <tr>
                    <td class="editor-label"><label asp-for="RoleMaster.ModifiedBy"></label>:</td>
                    <td></td>
                    <td class="editor-field"><input asp-for="RoleMaster.ModifiedBy" id="modifiedBy" onblur="isDataValid()" /></td>
                    <td class="editor-field"><span id="modifiedByValidation" style="color: red;"></span></td>
                </tr>
                <tr>
                    <td colspan="2"></td>
                    <td colspan="2">
                        <br />
                        <input id="inputAdd" name="inputAdd" type="button" value="Add" class="button-150" onclick="saveNewItem()" />
                        <input id="inputUpdate" name="inputUpdate" type="button" value="Update" class="button-150" onclick="updateCurrentItem()" />
                        <input type="button" value="Cancel" onclick="closeDialog(); return false;" class="button-100" />
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>
</form>
